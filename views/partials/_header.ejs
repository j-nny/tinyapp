<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expand="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if (username) { %>
        <form class="form-inline" action="/logout" method="GET">
            Logged in as: <%= username %>
            <button type="submit" class="btn btn-dark">Logout</button>
        </form>
      <% } else { %>
            <form class="form-inline" action="/login/" method="POST">
                <input name="username" class="form-control" type="text" placeholder="username" style="width:200px">
                <button type="submit" class="btn btn-dark">Submit</button>
            </form>
      <% } %>
  </nav>
</header>